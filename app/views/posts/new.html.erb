<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	</br>
	<%= f.label :url %>
	<%= f.text_field :url %>
	</br>
	<%= f.label :description %>
	<%= f.text_area :description, rows: 4, class: 'span6', :placeholder => "Tell about stupid things we do!" %>
	</br>
	<%= f.label :category_ids, "Categories" %>
	<%= f.select :category_ids, Category.all.collect{|c| [c.name, c.id]}, {}, {multiple: 'multiple'} %>
	</br>
	<%= f.submit :class => 'btn btn-success'%>
<% end %>